      *)         __other+=(-d "${__key}=${__arg}") ;;
      esac
    esac
  done

  local args=()
  args+=("${CURL_OPTS[@]}")
  args+=(-X POST)
  args+=(-d token="${__token}")
  args+=(-d f=pjson)
  args+=("${__portalUrl}"/sharing/rest/content/users/"${__user}"/"${__folderId}"/delete)
  curl "${args[@]}"
  echo

}

#----------------------------------------------------------------------
