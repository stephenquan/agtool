    -*) __key="${__arg#-}" ;;
    *)
      case "${__key}" in
      portalUrl) __portalUrl="${__arg}" ;;
      user)      __user="${__arg}" ;;
      folderId)  __folderId="${__arg}" ;;
      token)     __token="${__arg}" ;;
